<center> <h3>Doctors</h3></center>

<%= link_to 'Dashboard', patients_path, class: 'btn btn-primary' %>
<br/>
<br/>

<div class="row">
  <div class="col-sm-12">
    <table class="table table-hover table-bordered">
      <thead>
        <tr>
          <th>Name</th>
          <th>Clinic Name</th>
          <th>Speciality</th>
          <th>Phone Number</th>
        </tr>
      </thead>
      <tbody>
        <% @doctors.each do |doctor| %>
        <tr>
          <td><%= doctor.full_name %></td>
          <td><%= doctor.clinic_name %></td>
          <td><%= doctor.speciality.title %></td>
          <td><%= doctor.phone %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
